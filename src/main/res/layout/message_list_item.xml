<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/message_left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_b"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/message_left_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/datetimeLtextView"
                android:visibility="visible"/>

        <Button
                android:id="@+id/message_left_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:text="Button"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:background="@drawable/lightgreywhite_button_background"
                android:layout_above="@+id/datetimeLtextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date n Time(L)"
                android:textSize="12sp"
                android:id="@+id/datetimeLtextView"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical" android:layout_width="250dp"
        android:layout_height="175dp"
        android:background="@drawable/enquiry_form_background"
        android:id="@+id/form_linearLayout"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/form_heading"
            android:gravity="center"
            android:id="@+id/textView4" />

        <EditText
            android:id="@+id/form_field1"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:hint="Category"
            android:gravity="center"
            android:inputType="text"
            android:background="@color/whitesmoke"
            android:drawableLeft="@drawable/form_food"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            android:id="@+id/form_field2"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:hint="Preferred Location"
            android:gravity="center"
            android:inputType="text"
            android:background="@color/whitesmoke"
            android:drawableLeft="@drawable/form_food"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            android:id="@+id/form_field3"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:hint="Preferred Location"
            android:gravity="center"
            android:inputType="text"
            android:background="@color/whitesmoke"
            android:drawableLeft="@drawable/form_food"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <Button
            android:id="@+id/form_send_button"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:text="send"
            android:textColor="@color/blue"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_a"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:gravity="right">

            <TextView
                android:id="@+id/message_right_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/datetimeRtextView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date n Time(R)"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/datetimeRtextView"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />

    </LinearLayout>

</RelativeLayout>