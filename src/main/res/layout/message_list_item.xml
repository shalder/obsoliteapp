<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/message_left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="@drawable/bubble_b"
        android:layout_marginLeft="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/message_left_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Left"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date n Time(L)"
            android:textSize="12sp"
            android:id="@+id/datetimeLtextView"
            android:layout_below="@+id/message_left_text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bubble_a"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/message_right_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:gravity="right"
            android:textColor="@color/black"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date n Time(R)"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/datetimeRtextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_right_text_view"
            android:paddingLeft="7dp"
            android:paddingBottom="25dp"
            />
    </RelativeLayout>

</RelativeLayout>